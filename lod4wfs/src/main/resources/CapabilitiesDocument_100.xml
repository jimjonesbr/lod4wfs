	</FeatureTypeList>
	<ogc:Filter_Capabilities>
		<ogc:Spatial_Capabilities>
			<ogc:Spatial_Operators>
				<ogc:Disjoint />
				<ogc:Equals />
				<ogc:DWithin />
				<ogc:Beyond />
				<ogc:Intersect />
				<ogc:Touches />
				<ogc:Crosses />
				<ogc:Within />
				<ogc:Contains />
				<ogc:Overlaps />
				<ogc:BBOX />
			</ogc:Spatial_Operators>
		</ogc:Spatial_Capabilities>
		<ogc:Scalar_Capabilities>
			<ogc:Comparison_Operators>
				<ogc:Simple_Comparisons />
				<ogc:Between />
				<ogc:Like />
				<ogc:NullCheck />
			</ogc:Comparison_Operators>
		</ogc:Scalar_Capabilities>
	</ogc:Filter_Capabilities>
</WFS_Capabilities>